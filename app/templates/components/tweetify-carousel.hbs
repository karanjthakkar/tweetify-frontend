<div class="home-carousel">
  <div class="home-carousel__list owl-carousel owl-text-select-on">
    {{#each features as |feature|}}
      <div class="item">
        <div class="title">
          <h2>{{feature.title}}</h2>
        </div>
        <div class="text">
          <p>
            {{feature.text}}
          </p>
        </div>
      </div>
    {{/each}}
  </div>
  <div class="signin__link">
    <a href="#" {{action 'signInViaTwitter'}} class="primary big ui button">
      <i class="icon large twitter outline button"></i>
      <span>
        LOGIN WITH TWITTER
      </span>
    </a>
  </div>
</div>